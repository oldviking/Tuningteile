@page
@model Tuningteile.Pages.Compatible.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Hinzufügen zur Kompatibilitätsübersicht</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Model</label>
                <select asp-for="compatibility.ModelID" class ="form-control" asp-items="ViewBag.ModelID"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Tuning Teil</label>
                <select asp-for="compatibility.TuningPartId" class ="form-control" asp-items="ViewBag.TuningPartId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
